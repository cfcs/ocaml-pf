(executable
 (name alcotest_parse)
 (modules alcotest_parse)
 (libraries pf alcotest-unix logs.fmt))

(executable
 (name fuzz)
 (modules fuzz)
 (libraries pf logs.fmt afl-persistent))

(alias
 (name runtest)
 (deps alcotest_parse.exe)
 (action
  (progn
   (run ./alcotest_parse.exe))))

(alias
 (name fuzz)
 (deps fuzz.exe input/in input/dns input/ipv6 input/unimplemented output/lo)
 (action
  (progn
   (run afl-fuzz -i input/ -o output/ ./fuzz.exe))))
